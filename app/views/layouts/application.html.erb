<!DOCTYPE html>
<html>
  <head>
    <title>Nomster</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-toggleable-sm sticky-top navbar-light light-gray"> 
      <div>
        <%= link_to 'Nomster', root_path, class: 'navbar-brand' %>

        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#toggleElement" aria-controls="toggleElement" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>

      <div class="collapse navbar-collapse" id="toggleElement">
        <div class="navbar-nav">
          <%= link_to new_place_path, class:'nav-item nav-link' do %>
            <i class="fa fa-plus-circle"></i>
            Add Place
          <% end %>
          <% if user_signed_in? %>
            <%= link_to destroy_user_session_path, method: :delete, class: 'nav-item nav-link' do %>
              <i class="fa fa-sign-out"></i>
              Log Out
            <% end %>
          <% else %>
            <%= link_to new_user_session_path, class: 'nav-item nav-link' do %>
              <i class="fa fa-sign-in"></i>
              Log In
            <% end %>
            <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-item nav-link' %>
          <% end %>
        </div>  
      </div>
    </nav>

    <% if notice.present? %>
      <p class="alert alert-info col-10 offset-1"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert alert-danger col-10 offset-1"><%= alert %></p>
    <% end %>

    <%= yield %>

  </body>
</html>
