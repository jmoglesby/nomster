<div class="booyah-box col-10 offset-1">
  <%= image_tag 'user.png', class: "user-avatar float-left" %>
  <h3 class="mb-2"><%= @user.email %></h3>
  <h4 class="mb-2">Member Since: <%= @user.created_at.strftime("%B %d, %Y") %></h4>
  <span><i>Total Comments: </i><%= @user.comments.count %></span>
  <br/>
  <span><i>5 Star Ratings Given: </i><%= @user.comments.where(rating: '5_stars').count %></span>
</div>

<div class="container">
  <% @user.comments.each do |comment| %>
    <div>
      <blockquote>
        <% if comment.humanized_rating.present? %>
          <b><%= comment.humanized_rating %></b> -
        <% end %>
          <%= comment.message %>
        <small><%= comment.user.email %></small>
      </blockquote>
    </div>
  <% end %>
</div>