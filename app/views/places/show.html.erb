<div class="booyah-box col-10 offset-1">
  <h1><%= @place.name %></h1>
  <i><%= @place.address %></i>
  <br /><br />
  <p><%= @place.description %></p>

  <div class="d-flex justify-content-end">
    <%= link_to 'Edit', edit_place_path(@place), class: "btn btn-primary mx-1" %>
    <%= link_to 'Delete', place_path(@place), method: :delete, 
        data: { confirm: "Are you sure you want to delete this Place?" }, class: "btn btn-danger mx-1" %>
  </div>
</div>